#:kivy 2.1.0

BoxLayout:
    orientation: 'vertical'

    Label:
        text: app.gps_location

    Label:
        text: app.gps_status
    
    Button:
        text: 'Initialize base'
        on_press: app.post_to_base_api('api/initialize')
    
    Button:
        text: 'Set Origin'
        on_press: app.set_origin()

    BoxLayout:
        Button
            text: 'Set0'
            on_press: app.set_origin_zero()
        Button:
            text: 'N'
            on_press: app.point_at(1.0,0.0)
        Button:
            text: 'E'
            on_press: app.point_at(0.0,1.0)            
        Button:
            text: 'S'
            on_press: app.point_at(-1.0,0.0)
        Button:
            on_press: app.point_at(0.0,-1.0)        
            text: 'W'

    BoxLayout:
        Label:
            text: 'Rec'
        Button:
            text: 'Start'
            on_press: app.post_to_base_api('api/start_recording')
        Button:
            text: 'Stop'
            on_press: app.post_to_base_api('api/stop_recording')
    
    BoxLayout:
        Label:
            text: 'Zoom'
        Button:
            text: 'In'
            on_press: app.post_to_base_api('api/zoom_in')
        Button:
            text: 'Out'
            on_press: app.post_to_base_api('api/zoom_out')
            
    BoxLayout:
        Label:
            text: 'Xmit to'
        Spinner:
            text: 'Base'
            values: 'Base','Firebase','None'
            on_text:
                app.set_dest_addr(self.text)
                print(f'sending to {app.dest_addr}')
        ToggleButton:
            text: 'Start' if self.state == 'normal' else 'Stop'
            on_state:
                app.start(1000, 0) if self.state == 'down' else \
                app.stop()